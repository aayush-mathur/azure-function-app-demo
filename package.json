{
  "name": "azure-function-app-demo",
  "version": "1.0.0",
  "description": "Full-stack Azure Function App demo with React frontend and Node.js backend",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "azure",
    "functions",
    "react",
    "static-web-apps",
    "serverless",
    "full-stack"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aayush-mathur/azure-function-app-demo.git"
  }
}